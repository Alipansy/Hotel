{% extends 'base.html.twig' %}

{% block title %}Hello LivreController!{% endblock %}

{% block body %}
<h1 class="livre"><img class="orge" src="{{asset('assets/orge2.png')}}" alt="">Livre d'or<img class="orge" src="{{asset('assets/orge.png')}}" alt=""></h1>


     {{ form_start(formAvis) }}
<div class="form-group">
    <label class="form-label" for="{{ formAvis.comment.vars.id }}">Comment était votre expérience ?</label>
    {{ form_widget(formAvis.comment, { 'attr': {'class': 'form-control'} }) }}
</div>



<div class="form-group">
    <label class="form-label" for="{{ formAvis.rating.vars.id }}">Votre note ? </label>
    {{ form_widget(formAvis.rating, { 'attr': {'class': 'form-control'} }) }}
</div>

<button type="submit" class="btn btn-primary">Publier</button>
{{ form_end(formAvis) }}






    <style>
    h1{
